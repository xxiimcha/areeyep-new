@model AreEyeP.Models.ForgotPasswordViewModel

<body class="bg-gradient d-flex justify-content-center align-items-center" style="height: 100vh; margin: 0;">
    <div class="forgot-password-container card border-0 shadow-lg" style="width: auto; border-radius: 30px; padding: 30px;">
        <!-- Alert Section -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Logo Section -->
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="Logo" class="img-fluid" style="max-width: 150px;" />
        </div>

        <h3 class="text-center mb-4 font-weight-bold">Forgot Password</h3>
        <p class="text-center text-muted">Enter your email address, and we'll send you instructions to reset your password.</p>

        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
            <div class="form-group mb-3">
                <input class="form-control rounded-pill" id="inputEmail" name="Email" type="email" placeholder="Email" required />
            </div>
            <button type="submit" class="btn btn-success rounded-pill w-100 mt-3 mb-2" style="height: 50px; font-size: 1rem; font-weight: bold;">Send Reset Instructions</button>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="Account" class="text-muted">Back to Login</a>
        </div>
    </div>

    <style>
        .bg-gradient {
            background: linear-gradient(to right, #8300e9, #ff00a6);
        }
        .forgot-password-container {
            background-color: #fff;
            border-radius: 30px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            width: 350px;
            padding: 30px 20px;
        }
        .form-control {
            padding-left: 15px;
            font-size: 16px;
            height: 45px;
        }
        .btn-success {
            background-color: #28a745;
            border: none;
        }
        .btn-success:hover {
            background-color: #218838;
        }
    </style>
</body>
