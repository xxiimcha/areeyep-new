@model IEnumerable<AreEyeP.Models.ServiceRequest>
@{
    ViewData["Title"] = "Service Requests";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @Html.Partial("_CSSLinks") <!-- Include your CSS partial here -->
    <style>
        .full-width-container {
            padding: 0;
            margin: 0;
            max-width: 100%;
        }

        .card {
            margin: 0 auto;
            border-radius: 0;
        }

        .form-control, .form-select {
            width: 100%;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    @Html.Partial("_Header")

    <div id="layoutSidenav" class="full-width-container">
        @Html.Partial("_Sidebar")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-0">
                    <h1 class="mt-4">Service Requests</h1>

                    <!-- Service Requests Table -->
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            My Service Requests
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-hover">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th>#</th>
                                        <th>Service Type</th>
                                        <th>Date of Service</th>
                                        <th>Urgency Level</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        int i = 1;
                                        foreach (var request in Model)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@request.ServiceType</td>
                                                <td>@request.DateOfService.ToString("yyyy-MM-dd")</td>
                                                <td>@request.UrgencyLevel</td>
                                                <td>@request.Status</td>
                                                <td>
                                                    <a href="@Url.Action("ViewServiceRequest", "Client", new { id = request.Id })" class="btn btn-primary btn-sm">View</a>
                                                    <a href="@Url.Action("EditServiceRequest", "Client", new { id = request.Id })" class="btn btn-warning btn-sm">Edit</a>
                                                    <button onclick="deleteServiceRequest(@request.Id)" class="btn btn-danger btn-sm">Delete</button>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">No service requests found.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    @Html.Partial("_ScriptLinks")
    <script>
        function deleteServiceRequest(id) {
            if (confirm("Are you sure you want to delete this service request?")) {
                const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
                const tokenValue = tokenElement ? tokenElement.value : '';

                fetch(`/Client/DeleteServiceRequest/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': tokenValue
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            location.reload();
                        } else {
                            alert(data.message || "Failed to delete the service request.");
                        }
                    })
                    .catch(error => {
                        console.error("Error:", error);
                        alert("An error occurred while deleting the service request.");
                    });
            }
        }
    </script>
</body>
</html>
