@model IEnumerable<dynamic>
@{
    Layout = null;  // Not using the _Layout.cshtml file for this specific page
    ViewData["Title"] = "Manage Relatives";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @Html.Partial("_CSSLinks")
    <style>
        .full-width-container {
            padding: 0;
            margin: 0;
            max-width: 100%;
        }
        .card {
            margin: 0 auto;
            border-radius: 0;
        }
        .form-control, .form-select {
            width: 100%;
        }
    </style>
</head>
<body class="sb-nav-fixed">
    @Html.Partial("_Header")

    <div id="layoutSidenav">
        @Html.Partial("_Sidebar")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Deceased</h1>

                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            Relatives Linked to My Account
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-hover">
                                <thead class="bg-primary text-white">
                                    <tr>
                                        <th>#</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Date of Birth</th>
                                        <th>Date of Death</th>
                                        <th>Address</th>
                                        <th>Cause of Death</th>
                                        <th>Gender</th>
                                        <th>Application ID</th>
                                        <th>Date of Renewal</th> <!-- New Column -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        int i = 1;
                                        foreach (var relative in Model)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@relative.FirstName</td>
                                                <td>@relative.LastName</td>
                                                <td>@relative.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                                                <td>@relative.DateOfDeath?.ToString("yyyy-MM-dd")</td>
                                                <td>@relative.Address</td>
                                                <td>@relative.CauseOfDeath</td>
                                                <td>@relative.Gender</td>
                                                <td>@relative.ApplicationId</td>
                                                <td>@relative.DateOfRenewal?.ToString("yyyy-MM-dd")</td> <!-- Display Date of Renewal -->
                                            </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="10" class="text-center">No relatives found linked to your account.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    @Html.Partial("_ScriptLinks")
</body>
</html>
