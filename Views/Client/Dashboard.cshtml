@{
    Layout = null;  // Not using the _Layout.cshtml file for this specific page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @Html.Partial("_CSSLinks")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        #leafletMap {
            width: 100%;
            height: 100vh;
        }

        .offcanvas {
            width: 300px; /* Customize the width of the sidebar */
        }
    </style>
</head>
<body class="sb-nav-fixed">
    @Html.Partial("_Header")

    <div id="layoutSidenav">
        @Html.Partial("_Sidebar")

        <div id="layoutSidenav_content">
            <main>
                <div id="leafletMap"></div>
            </main>
        </div>
    </div>

    <!-- Sidebar for Catacomb Details -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="catacombSidebar" aria-labelledby="catacombSidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="catacombSidebarLabel">Catacomb Details</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div>
                <label>Name:</label>
                <input type="text" id="sidebarName" class="form-control" readonly>
                <label>Catacomb ID:</label>
                <input type="text" id="sidebarCatacombId" class="form-control" readonly>
                <label>Catacomb Number:</label>
                <input type="text" id="sidebarCatacombNumber" class="form-control" readonly>
                <label>Block Number:</label>
                <input type="text" id="sidebarBlockNumber" class="form-control" readonly>
                <label>Street Number:</label>
                <input type="text" id="sidebarStreetNumber" class="form-control" readonly>
                <label>Location Catacomb:</label>
                <input type="text" id="sidebarLocationCatacomb" class="form-control" readonly>
            </div>
        </div>
    </div>

    @Html.Partial("_ScriptLinks")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const map = L.map('leafletMap', {
                center: [10.302297, 123.956832],
                zoom: 17,
                minZoom: 15,
                maxZoom: 20
            });

            // Add OpenStreetMap tile layer
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Function to draw catacombs based on coordinates
            function drawCatacombs(map, locations) {
                locations.forEach(catacomb => {
                    if (catacomb.latitude && catacomb.longitude) {
                        const lat = catacomb.latitude;
                        const lng = catacomb.longitude;

                        const tombCoords = [
                            [lat - 0.00006, lng - 0.00008],
                            [lat - 0.00006, lng + 0.00008],
                            [lat, lng],
                            [lat - 0.00006, lng - 0.00008]
                        ];

                        const fillColor = catacomb.availabilityStatus === 'Available' ? 'green' : 'red';

                        const tombstone = L.polygon(tombCoords, {
                            color: 'black',
                            fillColor: fillColor,
                            fillOpacity: 0.7,
                            weight: 1
                        }).addTo(map);

                        tombstone.bindTooltip(
                            `<strong>${catacomb.catacombName || 'Unknown'}</strong><br>Status: ${catacomb.availabilityStatus || 'Unknown'}`,
                            { permanent: false, direction: 'top' }
                        );

                        tombstone.on('click', function () {
                            showSidebar(catacomb);
                        });
                    }
                });
            }

            // Function to add pathways and decorations
            function addDecorations(map) {
                const pathways = [
                    [[10.303, 123.954], [10.303, 123.957]],
                    [[10.302, 123.954], [10.302, 123.957]],
                    [[10.304, 123.955], [10.301, 123.955]]
                ];
                pathways.forEach(path => {
                    L.polyline(path, { color: 'gray', weight: 2, dashArray: '5, 10' }).addTo(map);
                });

                const trees = [
                    { lat: 10.3035, lng: 123.955, name: 'Tree 1' },
                    { lat: 10.3025, lng: 123.956, name: 'Tree 2' },
                    { lat: 10.303, lng: 123.957, name: 'Tree 3' }
                ];
                trees.forEach(tree => {
                    L.circle([tree.lat, tree.lng], {
                        color: 'green',
                        fillColor: 'green',
                        fillOpacity: 0.5,
                        radius: 5
                    }).bindTooltip(tree.name).addTo(map);
                });
            }

            // Fetch and draw catacombs
            fetch('/Catacomb/GetLocations')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.locations) {
                        drawCatacombs(map, data.locations);
                        addDecorations(map);
                    } else {
                        console.error('Error fetching locations:', data.message);
                    }
                })
                .catch(error => console.error('Error:', error));

            // Function to show the sidebar with catacomb details
            function showSidebar(catacomb) {
                document.getElementById('sidebarName').value = catacomb.catacombName || 'N/A';
                document.getElementById('sidebarCatacombId').value = catacomb.catacombID || 'N/A';
                document.getElementById('sidebarCatacombNumber').value = catacomb.catacombNumber || 'N/A';
                document.getElementById('sidebarBlockNumber').value = catacomb.blockNumber || 'N/A';
                document.getElementById('sidebarStreetNumber').value = catacomb.streetNumber || 'N/A';
                document.getElementById('sidebarLocationCatacomb').value = `${catacomb.latitude}, ${catacomb.longitude}` || 'N/A';

                const sidebar = new bootstrap.Offcanvas(document.getElementById('catacombSidebar'));
                sidebar.show();
            }
        });
    </script>
</body>
</html>
