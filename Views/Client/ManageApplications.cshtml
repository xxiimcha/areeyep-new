@model IEnumerable<AreEyeP.Models.BurialApplication>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Applications</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="sb-nav-fixed">
    <!-- Include the Header Partial -->
    @Html.Partial("_Header")

    <div id="layoutSidenav">
        <!-- Include the Sidebar Partial -->
        @Html.Partial("_Sidebar")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h2 class="mt-4">Manage Burial Applications</h2>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Burial Applications
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="applicationsTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Application ID</th>
                                            <th>Deceased Name</th>
                                            <th>Date of Burial</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var application in Model)
                                            {
                                                <tr>
                                                    <td>@application.Id</td>
                                                    <td>@application.FirstName @application.LastName</td>
                                                    <td>@application.DateOfBurial.ToString("yyyy-MM-dd")</td>
                                                    <td>@application.StartTime</td>
                                                    <td>@application.EndTime</td>
                                                    <td>@application.Status</td>
                                                    <td>
                                                        <a href="@Url.Action("ViewApplication", "Client", new { id = application.Id })" class="btn btn-primary btn-sm">View</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="7" class="text-center">No applications found.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
