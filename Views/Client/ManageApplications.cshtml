@model IEnumerable<AreEyeP.Models.BurialApplication>

@{
    Layout = null;  // Not using the _Layout.cshtml file for this specific page
    ViewData["Title"] = "Applications";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Include the CSS Links Partial -->
    @Html.Partial("_CSSLinks")
</head>
<style>
    /* Customizing the modal */
    .custom-modal-content {
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
    }

    .custom-modal-header {
        background-color: #28a745; /* Green background */
        color: white;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .gallery-img {
        width: 50px;
        height: 50px;
        border-radius: 4px;
        object-fit: cover;
    }

    .doctor-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .direction-icon {
        width: 25px;
        height: 25px;
        margin-left: 5px;
    }

    .modal-body {
        padding: 20px;
    }

    strong {
        color: #28a745; /* Green color for strong labels */
    }

    p {
        margin: 0;
        color: #6c757d;
    }

</style>
<body class="sb-nav-fixed">
    <!-- Render the Header Partial -->
    @Html.Partial("_Header")

    <div id="layoutSidenav">
        <!-- Render the Sidebar Partial -->
        @Html.Partial("_Sidebar")

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h2 class="mt-4">Manage Burial Applications</h2>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Burial Applications
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="applicationsTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Application ID</th>
                                            <th>Deceased Name</th>
                                            <th>Date of Burial</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var application in Model)
                                            {
                                                <tr>
                                                    <td>@application.ApplicationId</td>
                                                    <td>@application.DeceasedFirstName @application.DeceasedLastName</td>
                                                    <td>@application.DateOfBurial.ToString("yyyy-MM-dd")</td>
                                                    <td>@application.StartTime.ToString(@"hh\:mm")</td>
                                                    <td>@application.EndTime.ToString(@"hh\:mm")</td>
                                                    <td>
                                                        @if (application.Status == "Pending")
                                                        {
                                                            <span class="badge bg-warning text-dark">Pending</span>
                                                        }
                                                        else if (application.Status == "Approved")
                                                        {
                                                            <span class="badge bg-success">Approved</span>
                                                        }
                                                        else if (application.Status == "Rejected")
                                                        {
                                                            <span class="badge bg-danger">Rejected</span>
                                                        }
                                                        else if (application.Status == "Pending Payment")
                                                        {
                                                            <span class="badge bg-info text-dark">Pending Payment</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">@application.Status</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <button class="btn btn-primary btn-sm view-btn" data-id="@application.Id">View</button>
                                                        <a href="@Url.Action("Edit", "BurialApplication", new { id = application.Id })" class="btn btn-secondary btn-sm">Edit</a>
                                                        <a href="@Url.Action("Delete", "BurialApplication", new { id = application.Id })" class="btn btn-danger btn-sm">Delete</a>
                                                        @if (application.Status == "Pending Payment")
                                                        {
                                                            <button class="btn btn-success btn-sm add-payment-btn" data-id="@application.Id">Add Payment</button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="7" class="text-center">No applications found.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal for Viewing Details -->
    <div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content custom-modal-content">
                <div class="modal-header custom-modal-header">
                    <h5 class="modal-title" id="viewModalLabel">Burial Application Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Application ID:</th>
                                <td id="modalApplicationId"></td>
                                <th>Deceased Name:</th>
                                <td id="modalDeceasedName"></td>
                            </tr>
                            <tr>
                                <th>First Name (Applicant):</th>
                                <td id="modalApplicantFirstName"></td>
                                <th>Last Name (Applicant):</th>
                                <td id="modalApplicantLastName"></td>
                            </tr>
                            <tr>
                                <th>Relationship to Deceased:</th>
                                <td id="modalRelationshipToDeceased"></td>
                                <th>Contact Information:</th>
                                <td id="modalContactInfo"></td>
                            </tr>
                            <tr>
                                <th>Address:</th>
                                <td colspan="3" id="modalAddress"></td>
                            </tr>
                            <tr>
                                <th>Date of Burial:</th>
                                <td id="modalDateOfBurial"></td>
                                <th>Status:</th>
                                <td id="modalStatus" class="badge"></td>
                            </tr>
                            <tr>
                                <th>Start Time:</th>
                                <td id="modalStartTime"></td>
                                <th>End Time:</th>
                                <td id="modalEndTime"></td>
                            </tr>
                            <tr>
                                <th>Special Instructions:</th>
                                <td colspan="3" id="modalSpecialInstructions"></td>
                            </tr>
                            <tr>
                                <th>Cause of Death:</th>
                                <td id="modalCauseOfDeath"></td>
                                <th>Religion:</th>
                                <td id="modalReligion"></td>
                            </tr>
                            <tr>
                                <th>Attachment:</th>
                                <td colspan="3" id="modalAttachment"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Payment Modal -->
    <div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content custom-modal-content">
                <div class="modal-header custom-modal-header">
                    <h5 class="modal-title" id="paymentModalLabel">E Payment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Tabs for Payment Options -->
                    <ul class="nav nav-tabs" id="paymentTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" id="walk-in-tab" data-bs-toggle="tab" data-bs-target="#walk-in" type="button" role="tab" aria-controls="walk-in" aria-selected="true">Walk in payment</button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" id="e-payment-tab" data-bs-toggle="tab" data-bs-target="#e-payment" type="button" role="tab" aria-controls="e-payment" aria-selected="false">E payment</button>
                        </li>
                    </ul>
                    <div class="tab-content mt-3" id="paymentTabsContent">
                        <!-- Walk-in Payment Content -->
                        <div class="tab-pane fade show active" id="walk-in" role="tabpanel" aria-labelledby="walk-in-tab">
                            <form id="walkInForm">
                                <div class="mb-3">
                                    <label for="receipt" class="form-label">Upload Receipt:</label>
                                    <input type="file" class="form-control" id="receipt" name="receipt" accept="image/*">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </form>
                        </div>
                        <!-- E Payment Content -->
                        <div class="tab-pane fade" id="e-payment" role="tabpanel" aria-labelledby="e-payment-tab">
                            <button class="btn btn-primary" id="proceedEPaymentBtn">Proceed E payment</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Methods Modal (Will appear after "Proceed E payment" is clicked) -->
    <div class="modal fade" id="paymentMethodModal" tabindex="-1" aria-labelledby="paymentMethodModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content custom-modal-content">
                <div class="modal-header custom-modal-header">
                    <h5 class="modal-title" id="paymentMethodModalLabel">Payment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="paymentForm">
                        <div class="mb-3">
                            <label for="amount" class="form-label">Amount to pay</label>
                            <input type="text" class="form-control" id="amount" value="5000" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method:</label>
                            <div>
                                <input type="radio" id="gcash" name="paymentMethod" value="GCash">
                                <label for="gcash">Pay with GCash</label><br>
                                <input type="radio" id="paypal" name="paymentMethod" value="PayPal">
                                <label for="paypal">Pay with PayPal</label><br>
                                <input type="radio" id="paymaya" name="paymentMethod" value="PayMaya">
                                <label for="paymaya">Pay with PayMaya</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="accountNumber" class="form-label">Account Number</label>
                            <input type="text" class="form-control" id="accountNumber" name="accountNumber" required>
                        </div>
                        <div class="mb-3">
                            <label for="accountName" class="form-label">Account Name</label>
                            <input type="text" class="form-control" id="accountName" name="accountName" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success">Pay</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>

    <script>
        $(document).ready(function () {
            // Handle the click event of the View button
            $('.view-btn').on('click', function () {
                const applicationId = $(this).data('id');

                // AJAX request to fetch the burial application details
                $.ajax({
                    url: '/BurialApplication/GetDetails', // URL of the controller action that returns the data
                    type: 'GET',
                    data: { id: applicationId }, // Send the application ID to fetch its details
                    success: function (data) {
                        if (data.success) {
                            // Format the date of burial
                            const dateOfBurial = new Date(data.application.dateOfBurial);
                            const formattedDate = dateOfBurial.toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'long',
                                day: '2-digit'
                            });

                            // Format the start and end times to 12-hour format
                            const formatTime = (timeStr) => {
                                const [hours, minutes] = timeStr.split(':');
                                const date = new Date();
                                date.setHours(hours);
                                date.setMinutes(minutes);
                                return date.toLocaleTimeString('en-US', {
                                    hour: '2-digit',
                                    minute: '2-digit',
                                    hour12: true
                                });
                            };

                            const formattedStartTime = formatTime(data.application.startTime);
                            const formattedEndTime = formatTime(data.application.endTime);

                            // Populate the table with fetched data
                            $('#modalApplicationId').text(data.application.applicationId);
                            $('#modalDeceasedName').text(data.application.deceasedFirstName + ' ' + data.application.deceasedLastName);
                            $('#modalApplicantFirstName').text(data.application.firstName);
                            $('#modalApplicantLastName').text(data.application.lastName);
                            $('#modalRelationshipToDeceased').text(data.application.relationshipToDeceased);
                            $('#modalContactInfo').text(data.application.contactInformation);
                            $('#modalAddress').text(data.application.address);
                            $('#modalDateOfBurial').text(formattedDate);
                            $('#modalStartTime').text(formattedStartTime);
                            $('#modalEndTime').text(formattedEndTime);
                            $('#modalSpecialInstructions').text(data.application.specialInstructions);
                            $('#modalCauseOfDeath').text(data.application.causeOfDeath);
                            $('#modalReligion').text(data.application.religion);

                            if (data.application.attachmentPath) {
                                $('#modalAttachment').html(`<a href="${data.application.attachmentPath}" target="_blank">View Attachment</a>`);
                            } else {
                                $('#modalAttachment').text('No attachment available.');
                            }

                            // Display the status as a badge
                            let statusBadge = $('#modalStatus');
                            statusBadge.removeClass().addClass('badge');
                            if (data.application.status === "Pending") {
                                statusBadge.addClass('bg-warning text-dark').text('Pending');
                            } else if (data.application.status === "Approved") {
                                statusBadge.addClass('bg-success').text('Approved');
                            } else if (data.application.status === "Rejected") {
                                statusBadge.addClass('bg-danger').text('Rejected');
                            } else if (data.application.status === "Pending Payment") {
                                statusBadge.addClass('bg-info text-dark').text('Pending Payment');
                            } else {
                                statusBadge.addClass('bg-secondary').text(data.application.status);
                            }

                            // Show the modal
                            $('#viewModal').modal('show');
                        } else {
                            alert('Failed to fetch application details.');
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error fetching application details: ' + error);
                    }
                });
            });

            // Event delegation for dynamically created "Add Payment" buttons
            $(document).on('click', '.add-payment-btn', function () {
                // Retrieve the application ID
                const applicationId = $(this).data('id');

                // Optionally, set the application ID or other data in the modal if needed
                $('#paymentModal').data('application-id', applicationId);

                // Show the payment modal
                $('#paymentModal').modal('show');
            });

            $('#proceedEPaymentBtn').on('click', function () {
                // Hide the current payment modal
                $('#paymentModal').modal('hide');

                // Show the payment methods modal
                $('#paymentMethodModal').modal('show');
            });

            // Handle the payment form submission
            $('#paymentForm').on('submit', function (e) {
                e.preventDefault();

                // Collect payment details
                const paymentMethod = $('input[name="paymentMethod"]:checked').val();
                const accountNumber = $('#accountNumber').val();
                const accountName = $('#accountName').val();

                // Add your AJAX code here to send the payment details to your backend
                console.log('Payment method:', paymentMethod);
                console.log('Account number:', accountNumber);
                console.log('Account name:', accountName);

                // Close the modal after submission
                $('#paymentMethodModal').modal('hide');
            });
        });

    </script>
</body>
</html>
