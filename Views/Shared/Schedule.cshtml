@model IEnumerable<AreEyeP.Models.Schedule>

@{
    Layout = null; // Not using a shared layout file
    ViewData["Title"] = "Schedule Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Include your CSS and JS libraries here -->
    @Html.Partial("_CSSLinks")
</head>
<body class="sb-nav-fixed">
    <!-- Include the Header Partial -->
    @Html.Partial("_Header")

    <div id="layoutSidenav">
        <!-- Include the Sidebar Partial -->
        @Html.Partial("_Sidebar")

        <div id="layoutSidenav_content">
            <main>
                <div class="container mt-4">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h4>Schedule Details</h4>
                        </div>
                        <div class="card-body">
                            <form id="scheduleForm">
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label for="clientName" class="form-label">Name of client</label>
                                        <input type="text" id="clientName" class="form-control" placeholder="Name of Client" required />
                                    </div>
                                    <div class="col-md-4">
                                        <label for="scheduleDate" class="form-label">Date</label>
                                        <input type="date" id="scheduleDate" class="form-control" required />
                                    </div>
                                    <div class="col-md-4">
                                        <label for="scheduleDetails" class="form-label">Details</label>
                                        <textarea id="scheduleDetails" class="form-control" rows="2" placeholder="Details"></textarea>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-3">
                                        <label for="startTime" class="form-label">Start Time</label>
                                        <input type="time" id="startTime" class="form-control" required />
                                    </div>
                                    <div class="col-md-3">
                                        <label for="endTime" class="form-label">End Time</label>
                                        <input type="time" id="endTime" class="form-control" required />
                                    </div>
                                    <div class="col-md-6 d-flex justify-content-end align-items-center">
                                        <button type="button" id="editBtn" class="btn btn-outline-secondary">Edit</button>
                                    </div>
                                </div>
                            </form>

                            <div class="input-group mb-3">
                                <span class="input-group-text">Search</span>
                                <input type="text" id="searchBox" class="form-control" placeholder="Search" />
                            </div>

                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="bg-success text-white">
                                        <tr>
                                            <th>Schedule ID</th>
                                            <th>Schedule Details</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="scheduleTableBody">
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var schedule in Model)
                                            {
                                                <tr id="schedule-@schedule.Id">
                                                    <td>@schedule.ScheduleID</td>
                                                    <td><a href="#" class="view-link" data-id="@schedule.Id" onclick="viewSchedule('@schedule.Id')">View</a></td>
                                                    <td>@schedule.Status</td>
                                                    <td>
                                                        <button class="btn btn-warning btn-sm" onclick="editSchedule('@schedule.Id')">Edit</button>
                                                        <button class="btn btn-danger btn-sm" onclick="deleteSchedule('@schedule.Id')">Delete</button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center">No schedules available.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-flex justify-content-start mt-4">
                                <button class="btn btn-success me-2" onclick="addSchedule()">Add</button>
                                <button class="btn btn-primary me-2" onclick="updateSchedule()">Update</button>
                                <button class="btn btn-danger" onclick="deleteSchedule()">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Include your JavaScript libraries here -->
    @Html.Partial("_ScriptLinks")

    <script>
        // Sample JavaScript functions to handle adding, updating, and deleting schedules
        function addSchedule() {
            // Logic to add a new schedule
            alert('Add schedule functionality to be implemented.');
        }

        function updateSchedule() {
            // Logic to update the selected schedule
            alert('Update schedule functionality to be implemented.');
        }

        function deleteSchedule(id) {
            if (confirm("Are you sure you want to delete this schedule?")) {
                // Logic to delete the schedule by ID
                alert('Delete schedule functionality to be implemented.');
            }
        }

        function viewSchedule(id) {
            // Logic to view the schedule details
            alert('View schedule details functionality to be implemented.');
        }

        function editSchedule(id) {
            // Logic to edit the schedule
            alert('Edit schedule functionality to be implemented.');
        }

        // Search functionality
        document.getElementById('searchBox').addEventListener('input', function () {
            let searchTerm = this.value.toLowerCase();
            let rows = document.querySelectorAll('#scheduleTableBody tr');
            rows.forEach(row => {
                let scheduleID = row.children[0].textContent.toLowerCase();
                let scheduleDetails = row.children[1].textContent.toLowerCase();
                if (scheduleID.includes(searchTerm) || scheduleDetails.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>
