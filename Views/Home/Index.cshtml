@model AreEyeP.Models.LoginViewModel

<body class="bg-gradient d-flex justify-content-center align-items-center" style="height: 100vh; margin: 0;">
    <div class="login-container card border-0 shadow-lg" style="width: auto; border-radius: 30px; padding: 30px;">
        <!-- Alert Section -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Logo Section -->
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="Logo" class="img-fluid" style="max-width: 150px;" /> <!-- Adjust the path to your logo image -->
        </div>

        <h3 class="text-center mb-4 font-weight-bold">Member Login</h3>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group mb-3 position-relative">
                <input class="form-control rounded-pill pl-5" id="inputEmail" name="Email" type="email" placeholder="Email" required style="height: 50px; font-size: 1rem; padding-left: 2.5rem;" />
                <i class="fas fa-envelope position-absolute" style="left: 20px; top: 50%; transform: translateY(-50%); color: #ccc;"></i>
            </div>
            <div class="form-group mb-3 position-relative">
                <input class="form-control rounded-pill pl-5" id="inputPassword" name="Password" type="password" placeholder="Password" required style="height: 50px; font-size: 1rem; padding-left: 2.5rem;" />
                <i class="fas fa-lock position-absolute" style="left: 20px; top: 50%; transform: translateY(-50%); color: #ccc;"></i>
            </div>
            <button type="submit" class="btn btn-success rounded-pill w-100 mt-3 mb-2" style="height: 50px; font-size: 1rem; font-weight: bold;">LOGIN</button>
            <div class="text-center mt-3">
                <a href="password.html" class="text-muted">Forgot Username / Password?</a>
            </div>
        </form>
        <div class="text-center mt-3">
            <a asp-action="Register" asp-controller="Account" class="text-success font-weight-bold">Create your account →</a> <!-- Updated Link -->
        </div>
    </div>

    <!-- Additional Styles -->
    <style>
        /* Background Gradient */
        .bg-gradient {
            background: linear-gradient(to right, #8300e9, #ff00a6);
        }

        /* Custom Styles for the Login Page */
        .login-container {
            background-color: #fff;
            border-radius: 30px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            width: 350px; /* Reduced the width to make it smaller */
            padding: 30px 20px; /* Adjusted padding for a balanced appearance */
        }

        /* Form control styles */
        .form-control {
            padding-left: 45px;
            font-size: 16px;
            height: 45px;
        }

        /* Placeholder styling */
        ::placeholder {
            color: #aaa;
            opacity: 1;
        }

        /* Icon styles */
        .form-group i {
            color: #aaa;
        }

        /* Button hover effect */
        .btn-success {
            background-color: #28a745;
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        /* Link styling */
        a {
            text-decoration: none !important; /* Ensure no underlines for all a tags */
        }

            a.text-success {
                color: #28a745;
            }

                a.text-success:hover {
                    text-decoration: underline; /* Optional: Only add underline on hover for visual feedback */
                }

        /* Alert styling */
        .alert {
            margin-bottom: 20px;
        }
    </style>

    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
